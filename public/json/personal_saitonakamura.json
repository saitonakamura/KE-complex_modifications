    {
      "description": "Hold tab to Hyper",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab"
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_control",
                "left_alt",
                "left_command"
              ],
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ]
        }
      ]
    },
    {
      "description": "Left Shift + Spacebar => Backspace",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "lazy": true,
              "repeat": true
            }
          ]
        }
      ]
    },
